 <!-- Showing habbits if respective user  -->
<div id="habbit-<%=habbit._id%>" class="new-habbit">
    <details>
      <summary>
        <ul>
          <li id="description-li">
            <%=habbit.habbitTitle%>
          </li>
          <li>Total Days
            <br>&nbsp;&nbsp;<%=habbit.totalDays%> Days</li>
          <!-- <li id="streak"> Current Streak <br>&nbsp;&nbsp;&nbsp;&nbsp;<%=habbit.streak%> Days&nbsp;&nbsp;<i class="fas fa-fire"></i> </li> -->
          <li>
            <% let tzoffset = (new Date()).getTimezoneOffset() * 60000, found=false, status='';
            var today = (new Date(Date.now() - tzoffset)).toISOString().slice(0, 10);
            habbit.dates.find(function (item, index) {
                if(item.date === today)
                {
                    found = true;
                    status = item.complete;
                }
            }); %> 
            <a style="text-decoration: none;" href="/habbits/status-update/?id=<%= habbit._id %>&date=<%= today %>">
              <% if(found && status==='yes'){ %>
              Done&nbsp;&nbsp;<i class="fas fa-check-circle"></i>
              <% } else if(found && status==='no'){ %>
              Skip&nbsp;&nbsp;<i class="fas fa-times-circle"></i>
              <% } else { %>
              None&nbsp;&nbsp;<i class="fas fa-minus-circle"></i>
              <% } %>
          </a> 
           </a>
          </li>
          <li><a href="/habbits/destroy/<%=habbit.id %>"><button style="font-size:1rem; margin-bottom: 1%;">Delete Habbit</button></a></li>
  
        </ul></summary>
      
        <p><%=habbit.habbitDescription%></p>
    </details>
    
  </div>
 