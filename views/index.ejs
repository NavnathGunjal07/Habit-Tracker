<div id="wrapper">
 <!-- including side bar in main index file -->
   <%- include('_aside') -%> 
  
    <div id="navbar-wrapper">
      <nav class="navbar navbar-inverse">
        <div class="container-fluid">
          <div class="navbar-header">
            <a href="#" class="navbar-brand" id="sidebar-toggle"><i class="fa fa-bars"></i></a>
           
          </div>
          <form class="form-inline">
            <button  id ="addnewhabbit" class="btn btn-outline-success" type="button">Add New Habbit</button>
          </form>
        </div>
      </nav>
    </div>
  
    <section id="content-wrapper">
        <div class="row">
          <div class="col-lg-12">
            <form id ="add-new-habbit-form" action="/habbits/create" method="post">
              <label for="title">Enter Title</label>
              <input type="text" name="title" placeholder="Enter Title" required>
              <label for="Description">
                <input type="text" name="description" placeholder="Enter Description" required>
              </label>
              <button id ="add-new-habbit-form-button" class="btn btn-outline-success" type="submit">Add New Habbit</button>
            </form>
            <!-- including habbits in index file -->
            <div id = "main-home-container">
              <% for(habbit of habbits){%>
                <%- include('_habbits.ejs') -%>
             <%}%>
            </div>
             <!-- including week view in index file -->
            <div id = "main-home-container-week">
              <ul class="habit-list text-center">
              <% for(habbit of habbits){%>
                <%- include('_weekView.ejs') -%>
             <%}%>
            </ul>
            
            </div>
          </div>
        </div>
    </section>
  </div>
